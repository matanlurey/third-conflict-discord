{
  "name": "@matanlurey/node-typescript-template",
  "version": "0.1.0",
  "description": "Node.js template for TypeScript",
  "scripts": {
    "fix": "prettier --write . --ignore-path .gitignore && eslint --fix src test --ext .ts",
    "lint": "prettier --ignore-path .gitignore --list-different src && eslint src test --ext .ts",
    "start": "ts-node src/index.ts",
    "watch": "nodemon src/index.ts",
    "repl": "nodemon ./tool/repl.ts",
    "save": "ts-node ./tool/save.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matanlurey/node-typescript-template.git"
  },
  "main": "src/index.ts",
  "author": "Matan Lurey",
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/chance": "^1.1.0",
    "@types/columnify": "^1.5.0",
    "@types/fs-extra": "^8.1.1",
    "@types/jest": "^25.2.1",
    "@types/minimist": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.5.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "camel-case": "^4.1.1",
    "capital-case": "^1.0.3",
    "chance": "^1.1.6",
    "change-case": "^4.1.1",
    "columnify": "^1.5.4",
    "discord.js": "^12.2.0",
    "fs-extra": "^9.0.0",
    "hook-std": "^2.0.0",
    "minimist": "^1.2.5",
    "string-argv": "^0.3.1",
    "title-case": "^3.0.2",
    "ts-mixer": "^5.3.0"
  }
}
